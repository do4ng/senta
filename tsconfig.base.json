{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["node", "vitest/globals"]
  }
}
